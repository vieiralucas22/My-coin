<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="15dp"
    android:background="@drawable/background_login_button">

    <View
        android:id="@+id/view_goals"
        android:layout_width="50dp"
        android:layout_height="42dp"
        android:background="@drawable/target_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/view_control"
        app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view_control"
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:background="@drawable/control_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view_goals"
            app:layout_constraintEnd_toStartOf="@+id/view_home"/>

        <View
            android:id="@+id/view_home"
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:background="@drawable/home_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view_control"
            app:layout_constraintEnd_toStartOf="@+id/view_person"/>

        <View
            android:id="@+id/view_person"
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:background="@drawable/person_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view_home"
            app:layout_constraintEnd_toStartOf="@+id/view_ranking"/>

        <View
            android:id="@+id/view_ranking"
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:background="@drawable/ranking_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view_person"
            app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>