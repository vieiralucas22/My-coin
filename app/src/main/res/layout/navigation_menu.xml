<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="15dp"
    android:background="@drawable/background_login_button">

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:justifyContent="space_around"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/view_goals"
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:background="@drawable/target_icon" />

        <View
            android:id="@+id/view_control"
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:background="@drawable/control_icon" />

        <View
            android:id="@+id/view_home"
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:background="@drawable/home_icon" />

        <View
            android:id="@+id/view_person"
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:background="@drawable/person_icon" />

        <View
            android:id="@+id/view_ranking"
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:background="@drawable/ranking_icon" />
    </com.google.android.flexbox.FlexboxLayout>



</androidx.constraintlayout.widget.ConstraintLayout>