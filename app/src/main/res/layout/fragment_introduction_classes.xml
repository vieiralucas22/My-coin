<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_all_classes"
    android:padding="10dp"
    tools:context=".fragments.classes.allclasses.IntroductionClassesFragment">

    <Button
        android:id="@+id/button_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/back_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/introduction_classes"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RelativeLayout
        android:id="@+id/lesson_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_classes_item"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:layout_marginTop="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title">

        <ImageView
            android:id="@+id/image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/video_icon"
            android:src="@drawable/video_icon" />

        <TextView
            android:id="@+id/class_title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/image"
            android:text="@string/lesson_1"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/class_title_1"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/image"
            android:text="@string/what_s_financial_education"
            android:textColor="@color/white"
            android:textSize="14sp" />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lesson_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_classes_item"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lesson_1">

        <ImageView
            android:id="@+id/image_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/video_icon"
            android:src="@drawable/video_icon" />

        <TextView
            android:id="@+id/class_title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/image_2"
            android:text="@string/lesson_2"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_subtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/class_title_2"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/image_2"
            android:text="@string/how_can_we_start"
            android:textColor="@color/white"
            android:textSize="14sp" />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lesson_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_classes_item"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lesson_2">

        <ImageView
            android:id="@+id/image_3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/video_icon"
            android:src="@drawable/video_icon" />

        <TextView
            android:id="@+id/class_title_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/image_3"
            android:text="@string/lesson_3"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_subtitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/class_title_3"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/image_3"
            android:text="@string/organize_your_home"
            android:textColor="@color/white"
            android:textSize="14sp" />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lesson_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_classes_item"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lesson_3">

        <ImageView
            android:id="@+id/image_4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/video_icon"
            android:src="@drawable/video_icon" />

        <TextView
            android:id="@+id/class_title_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/image_4"
            android:text="@string/lesson_4"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_subtitle4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/class_title_4"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/image_4"
            android:text="@string/define_your_target"
            android:textColor="@color/white"
            android:textSize="14sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lesson_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_classes_item"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lesson_4">

        <ImageView
            android:id="@+id/image_5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/video_icon"
            android:src="@drawable/video_icon" />

        <TextView
            android:id="@+id/class_title_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/image_5"
            android:text="@string/lesson_5"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_subtitle5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/class_title_5"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/image_5"
            android:text="@string/the_value_of_tomorrow"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </RelativeLayout>

    <include
        android:id="@+id/navigation_menu"
        layout="@layout/navigation_menu"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
